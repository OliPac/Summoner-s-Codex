<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="signUpForm" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #2c3e50;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.summonerscodex.controller.SignUpFormController">
  <children>
    <Label text="Registrarse" style="-fx-text-fill: #f1c40f;">
      <font>
        <Font name="System Bold Italic" size="30.0" />
      </font>
    </Label>
    <VBox>
      <children>
        <Label text="Correo electrónico" style="-fx-text-fill: #ecf0f1;">
          <font>
            <Font size="20.0" />
          </font>
        </Label>
        <TextField fx:id="textCorreo" promptText="Ej. Admin@gmail.com" style="-fx-background-color: #34495e; -fx-text-fill: white;" />
      </children>
      <VBox.margin>
        <Insets left="50.0" right="50.0" />
      </VBox.margin>
    </VBox>
    <VBox>
      <children>
        <Label text="Nombre de Usuario" style="-fx-text-fill: #ecf0f1;">
          <font>
            <Font size="20.0" />
          </font>
        </Label>
        <TextField fx:id="textUsuario" promptText="Ej. Admin" style="-fx-background-color: #34495e; -fx-text-fill: white;" />
      </children>
      <VBox.margin>
        <Insets left="50.0" right="50.0" top="15.0" />
      </VBox.margin>
    </VBox>
    <HBox>
      <children>
        <VBox>
          <children>
            <Label alignment="TOP_LEFT" text="Contraseña" style="-fx-text-fill: #ecf0f1;">
              <font>
                <Font size="20.0" />
              </font>
            </Label>
            <TextField fx:id="textContraseña" promptText="Ej. 1234" style="-fx-background-color: #34495e; -fx-text-fill: white;" />
          </children>
        </VBox>
        <VBox>
          <children>
            <Label alignment="TOP_LEFT" text="Confirmar Contraseña" style="-fx-text-fill: #ecf0f1;">
              <font>
                <Font size="20.0" />
              </font>
              <VBox.margin>
                <Insets />
              </VBox.margin>
            </Label>
            <TextField fx:id="textConfirmarContraseña" promptText="Ej. 1234" style="-fx-background-color: #34495e; -fx-text-fill: white;" />
          </children>
          <HBox.margin>
            <Insets left="100.0" />
          </HBox.margin>
        </VBox>
      </children>
      <VBox.margin>
        <Insets left="50.0" right="50.0" top="15.0" />
      </VBox.margin>
    </HBox>
    <HBox alignment="CENTER">
      <children>
        <Button fx:id="btnLimpiarRegistrarse" mnemonicParsing="false" onAction="#borradoTextoRegistrar" text="Limpiar" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold;">
          <HBox.margin>
            <Insets right="270.0" />
          </HBox.margin>
          <font>
            <Font name="System Bold Italic" size="20.0" />
          </font>
        </Button>
        <Button fx:id="btnIngresar" mnemonicParsing="false" onAction="#validarCorreo" text="Registrar" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;">
          <font>
            <Font name="System Bold Italic" size="20.0" />
          </font>
        </Button>
      </children>
      <VBox.margin>
        <Insets top="20.0" />
      </VBox.margin>
    </HBox>
  </children>
</VBox>
