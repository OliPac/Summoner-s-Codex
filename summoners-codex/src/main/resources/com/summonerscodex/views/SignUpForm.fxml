<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<VBox fx:id="signUpForm" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.summonerscodex.controller.SignUpFormController">
   <children>
      <Label text="Registrarse">
         <font>
            <Font name="System Bold Italic" size="30.0" />
         </font>
      </Label>
      <VBox>
         <children>
            <Label text="Correo electrónico">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="textCorreo" layoutX="20.0" layoutY="50.0" promptText="Ej. Admin@gmail.com">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
         </children>
         <VBox.margin>
            <Insets left="50.0" right="50.0" />
         </VBox.margin>
      </VBox>
      <VBox>
         <children>
            <Label text="Nombre de Usuario">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="textUsuario" promptText="Ej. Admin">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
         </children>
         <VBox.margin>
            <Insets left="50.0" right="50.0" top="15.0" />
         </VBox.margin>
      </VBox>
      <HBox>
         <children>
            <VBox>
               <children>
                  <Label alignment="TOP_LEFT" text="Contraseña">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="textContraseña" promptText="Ej. 1234">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label alignment="TOP_LEFT" text="Confirmar Contraseña">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="textConfirmarContraseña" layoutX="10.0" layoutY="40.0" promptText="Ej. 1234">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
               </children>
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets left="50.0" right="50.0" top="15.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="btnLimpiarRegistrarse" mnemonicParsing="false" onAction="#borradoTextoRegistrar" text="Limpiar">
               <HBox.margin>
                  <Insets right="270.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Button>
            <Button fx:id="btnIngresar" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#validarCorreo" text="Ingresar">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
