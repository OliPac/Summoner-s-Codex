<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #141E30; -fx-padding: 20;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.summonerscodex.controller.Builds.TusBuildsController">
	    <Button fx:id="btnRegresar" layoutX="50" layoutY="20" onAction="#RegresarMenu" style="-fx-background-color: #f1c40f; -fx-text-fill: black; -fx-font-size: 18; -fx-padding: 10; -fx-background-radius: 5;" text="Regresar al Menu" />
	
    
    <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10;" text="Builds Guardadas" />

    <!-- ScrollPane para hacer desplazable el contenedor de builds -->
    <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
        <VBox fx:id="buildsContainer" alignment="CENTER" spacing="10" style="-fx-background-color: transparent;" />
    </ScrollPane>

</VBox>
