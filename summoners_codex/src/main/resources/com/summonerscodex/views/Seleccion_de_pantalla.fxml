<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="root" style="-fx-background-color: #141E30;" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx" fx:controller="com.summonerscodex.controller.Seleccion_de_pantallaController">
    <!-- Contenedor de botones de navegación -->
    <left>
        <HBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 20;">
            <!-- Botón izquierdo -->
            <Button fx:id="leftButton" style="
                -fx-background-color: linear-gradient(to right, #D4AF37, #FF8C00); /* Colores dorados y metálicos */
                -fx-text-fill: #1c1c1c; 
                -fx-font-size: 18px;
                -fx-font-weight: bold;
                -fx-padding: 10 20;
                -fx-background-radius: 30; /* Borde más redondeado */
                -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.6), 8, 0.5, 0, 4); /* Sombra suave */
            " text="&lt;&lt;" />
            
            <!-- Botón derecho -->
            <Button fx:id="rightButton" style="
                -fx-background-color: linear-gradient(to right, #D4AF37, #FF8C00); /* Colores dorados y metálicos */
                -fx-text-fill: #1c1c1c; 
                -fx-font-size: 18px;
                -fx-font-weight: bold;
                -fx-padding: 10 20;
                -fx-background-radius: 30; /* Borde más redondeado */
                -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.6), 8, 0.5, 0, 4); /* Sombra suave */
            " text="&gt;&gt;" />
        </HBox>
    </left>

    <!-- Contenedor de carrusel con desplazamiento controlado -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="NEVER">
            <HBox fx:id="carouselContainer" alignment="CENTER" spacing="20" style="
                -fx-background-color: #1c1c1c;
                -fx-background-radius: 10;
                -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0.5, 0, 5);
            " />
        </ScrollPane>
    </center>
</BorderPane>
